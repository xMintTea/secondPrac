<Page x:Class="MintLab.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MintLab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
            <Button Content="Материалы" Name="BtnMaterials" Height="50" Margin="10" Click="BtnMaterials_Click"/>
            <Button Content="Поставщики" Name="BtnSuppliers" Height="50" Margin="10" 
           Click="BtnMaterials_Click"/>
        </StackPanel>
    </Grid>
</Page>
