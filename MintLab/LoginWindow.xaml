<Window x:Class="MintLab.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MintLab"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="313*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Width="286" Height="277" VerticalAlignment="Top" Margin="107,47,0,0" Grid.ColumnSpan="2">
            <TextBlock  Text="Логин" Margin="0,0,191,0" FontSize="16"></TextBlock>
            <TextBox Name="LoginText" Text="{Binding Login}"  FontSize="16"  ></TextBox>
            <TextBlock Text="Пароль" Margin="0,0,191,0" FontSize="16" ></TextBlock>
            <TextBox  Name="PasswordText" Text="{Binding Password}" FontSize="16" ></TextBox>
            <Button Content="Войти" Click="Autorized_Click"/>
        </StackPanel>
    </Grid>
</Window>
